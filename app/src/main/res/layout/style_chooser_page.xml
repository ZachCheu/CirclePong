<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HOW TO PLAY"
        android:id="@+id/titleText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textColor="#FFFFFD" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/img"
        android:layout_marginTop="75dp"
        android:adjustViewBounds="false"
        android:layout_below="@+id/sub_Text"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:src="@drawable/img_googleplay"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Connect to Google Play to unlock exclusive features!"
        android:id="@+id/sub_Text"
        android:textAlignment="center"
        android:textSize="23dp"
        android:textColor="#191918"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/icon_launcher"
        android:scaleType="fitXY"
        android:layout_below="@+id/sub_Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Circle Pong"
        android:id="@+id/txt4"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="36dp"
        android:textIsSelectable="false"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quite literally circle pong"
        android:id="@+id/txt5"
        android:textSize="17dp"
        android:textAlignment="center"
        android:textColor="#d3d3d3"
        android:layout_below="@+id/txt4"
        android:layout_centerHorizontal="true"
        android:width="200dp" />

</RelativeLayout>